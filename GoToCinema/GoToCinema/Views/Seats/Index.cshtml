@model IEnumerable<GoToCinema.Models.DomainModels.Seat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (User.IsInRole("admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Row.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Row.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SeatNumber)
    </td>
    @if (User.IsInRole("admin"))
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    }
    else
    {
        <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
    }
</tr>
    }

</table>
