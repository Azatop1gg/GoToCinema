@model IEnumerable<GoToCinema.Models.DomainModels.Row>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="heading">Ряды</h2>
@if (User.IsInRole("admin"))
{
<div>
    <button class="btn btn-outline-primary" onclick="location.href='/Rows/Create'" style="margin:10px;">Добавить ряд</button>
</div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hall.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RowName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Hall.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RowName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Note)
    </td>
    @if (User.IsInRole("admin"))
    {
        <td>
            <a href="/Rows/Edit/@item.Id" class="btn btn-outline-primary">Изменить</a>
            <a href="/Rows/Details/@item.Id" class="btn btn-outline-primary">Информация</a>
            <a href="/Rows/Delete/@item.Id" class="btn btn-outline-danger btn-danger">Удалить</a>
        </td>
    }
    else
    {
    }
</tr>
    }

</table>
