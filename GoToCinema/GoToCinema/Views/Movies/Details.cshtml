@model GoToCinema.Models.DomainModels.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="heading">Информация</h2>
@Styles.Render("~/Content/MyStyles/MovieStyles.css")
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Producer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
@if (User.IsInRole("admin"))
{
    <div>
        <a href="/Movies/Edit/@Model.Id" class="btn btn-outline-primary">Изменить</a>
        <a href="/Movies/Delete/@Model.Id" class="btn btn-outline-danger btn-danger">Удалить</a>
    </div>
    <div class="container-1">
        <a href="/Movies/Index" id="backToList" class="btn btn-info">Вернуться на главную</a>
    </div>
}
else
{
    <div class="container-1">
        <a href="/Movies/Index" id="backToList" class="btn btn-info">Вернуться на главную</a>
    </div>
}
